<h1 style="font-weight: normal; font-size: 22px">
	Здравствуйте,<br><br>
	На ваш комментарий ответили:
</h1>
<div style="background-image: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAAPCAIAAACqfTKuAAAACXBIWXMAAAsTAAALEwEAmpwYAAAAB3RJTUUH3QQJECogot8DiwAAABl0RVh0Q29tbWVudABDcmVhdGVkIHdpdGggR0lNUFeBDhcAAAAZSURBVAjXY/j//z8TAwMDNszw3iiKAY88ACseB47m9NOYAAAAAElFTkSuQmCC); background-position: center center; width: 100%; font-weight: bold; font-size: 14px; min-height: 14px">
	<br>
</div>
<% @comments.each do |topic, children| -%>
	<div style="clear: both; border-bottom: 1px solid #d3d3d3;">
	<h2><%= link_to topic.title, "#{root_url}/#{polymorphic_url(topic)}", style: "text-decoration: none; color: black; font-size: 20px;" %></h2>
	<% children.each do |children| %>
		<% comment = children.first.parent %>
		<div>
			<%= image_tag "#{root_url}/#{comment.author.avatar.thumb}", class: 'image_fix', width: 60, height: 60, style: 'float:left' %>
			<div class="comment-content" style="margin-left: 80px; width: 540px; height: 64px; font-size: 12px">
				<p>
					<% if comment.author.social_auth %>
						<%= image_tag("#{root_url}/#{asset_path("#{comment.author.social_auth.provider}_icon.png")}", class: 'image_fix', style: 'float:left: margin: 0') %>
						<%= link_to comment.author.name, comment.author.social_url, class: 'name', style: "color: blue; text-decoration: underline;" %>
					<% else %>
						<span class="name" style="color: blue"><%= comment.author.name %></span>
					<% end %>
					<span class="date"><%= comment.created_at.strftime("%d.%m.%Y %H:%M") %></span>
				</p>
				<p><%= comment.body %></p>
			</div>
		</div>

		<% children.each do |comment| %>
		<div style="margin-left: 50px">
			<%= image_tag "#{root_url}/#{comment.author.avatar.thumb}", class: 'image_fix', width: 60, height: 60, style: 'float:left; margin: 0' %>
			<div class="comment-content" style="margin-left: 80px; width: 540px; height: 64px; font-size: 12px">
				<p>
					<% if comment.author.social_auth %>
						<%= image_tag("#{root_url}/#{asset_path("#{comment.author.social_auth.provider}_icon.png")}", class: 'image_fix', style: 'float:left: margin: 0') %>
						<%= link_to comment.author.name, comment.author.social_url, class: 'name', style: "color: blue; text-decoration: underline;" %>
					<% else %>
						<span class="name" style="color: blue"><%= comment.author.name %></span>
					<% end %>
					<span class="date"><%= comment.created_at.strftime("%d.%m.%Y %H:%M") %></span>
				</p>
				<p><%= comment.body %></p>
			</div>
		</div>
		<% end %>
	<% end %>
	</div>
<% end %>
<br>
