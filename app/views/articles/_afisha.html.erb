<div class="afisha">
	<div class="left afisha-description">
		<h2>Афиша событий</h2>
		<%= image_tag(asset_path('afisha.png')) %>
	</div>
	<div class="right afisha-list">
		<% @afisha_articles.each do |event_article| %>
			<div class="afisha-item" data-item-image-url="<%= event_article.head_image.afisha.url %>">
				<div class="icon left"></div>
				<span class="month-day-date"><%= Russian.strftime(event_article.target_at, "%d/%m") %></span>
				<span class="week-day"><%= Russian.strftime(event_article.target_at, "%a") %></span>
				<%= link_to event_article.title, event_article, class: 'afisha-link' %>
			</div>
		<% end %>
	</div>
	<div class="clear"></div>
</div>

<div class="afisha-purple-line"></div>