<% url ||= request.url %>
<div class="social-share-line" data-id="<%= subject.id %>" data-kind="<%= subject.class.name %>">
	<a class="fb" href="http://www.facebook.com/share.php?u=<%=u url %>&title=<%=u subject.title %>" target="_blank">
		<%= subject.fb_shares_count %>
	</a>
	<a class="vk" href="http://vkontakte.ru/share.php?url=<%=u url %>" target="_blank">
		<%= subject.vk_shares_count %>
	</a>
	<a class="twitter" href="http://twitter.com/home?status=<%=u subject.title %>+<%=u url %>" target="_blank">
		<%= subject.twitter_shares_count %>
	</a>
	<a class="gplus" href="https://plus.google.com/share?url=<%=u url %>" target="_blank">
		<%= subject.gplus_shares_count %>
	</a>
	<a class="mailru" href="http://connect.mail.ru/share?url=<%=u url %>&comment=<%=u subject.title %>" target="_blank">
		<%= subject.mailru_shares_count %>
	</a>
</div>